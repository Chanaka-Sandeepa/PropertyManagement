<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/graycolor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.chanaka.propertymanager.Views.Home"
>

    <Button
        android:text="Payments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCreate"
        android:layout_alignLeft="@+id/btnCreate"
        android:layout_alignStart="@+id/btnCreate"
        android:layout_marginTop="36dp"
        android:drawableTop="@drawable/money"
        android:id="@+id/btnPayment" />

    <Button
        android:text="Alerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnPayment"
        android:layout_alignRight="@+id/btnTenants"
        android:layout_alignEnd="@+id/btnTenants"
        android:drawableTop="@drawable/alarm"
        android:id="@+id/btnAlerts" />

    <Button
        android:text="Tenants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnTenants"
        android:layout_above="@+id/btnPayment"
        android:layout_toRightOf="@+id/btnPayment"
        android:layout_toEndOf="@+id/btnPayment"
        android:layout_marginLeft="54dp"
        android:drawableTop="@drawable/tenant"
        android:layout_marginStart="54dp" />

    <Button
    android:text="@string/create_btn_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
    android:layout_marginTop="45dp"
        android:drawableTop="@drawable/home"
    android:id="@+id/btnCreate"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp" />

</RelativeLayout>
